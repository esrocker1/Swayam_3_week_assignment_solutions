def expanding(l):
    q=0
    y=[]
    for i in range(len(l)):
        if i>0 :
            if l[i] > l[i-1]:
                y= y+ [l[i]-l[i-1]]
            else:
                y=y + [l[i-1]-l[i]]
           
    for x in range(1,len(y)):
        if y[x-1]>=y[x]:
            q=1
    if q ==0 :
        return(True)
    else : 
        return(False)
